<div class="chat-button" id="openChatButton">💬</div>
<div class="chat-window card" id="chatWindow" style="display:none;">
    <div class="card-header">
        <h5 class="mb-0">ChatBot</h5>
        <button type="button" class="close" id="closeChatButton" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="card-body chat-messages" id="chatMessages"></div>
    <div class="card-footer chat-input">
        <input type="text" class="form-control" id="chatInput" placeholder="Type a message..." />
        <button class="btn btn-primary ml-2" id="sendButton">Send</button>
    </div>
</div>

